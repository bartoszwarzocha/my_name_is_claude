{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "version": "3.8.0",
  "description": "Parallel Agent Execution System - 3x development speed through concurrent workflows",
  "lastUpdated": "2025-10-05",

  "enabled": true,
  "maxParallelAgents": 5,
  "defaultStrategy": "concurrent",

  "execution": {
    "workerPool": {
      "minWorkers": 2,
      "maxWorkers": 5,
      "autoScale": true,
      "scalingThreshold": 0.8
    },
    "taskQueue": {
      "maxQueueSize": 100,
      "priorityLevels": ["critical", "high", "medium", "low"],
      "defaultPriority": "medium",
      "timeout": 600
    },
    "retryPolicy": {
      "enabled": true,
      "maxRetries": 3,
      "retryDelay": 5,
      "exponentialBackoff": true
    }
  },

  "strategies": {
    "concurrent": {
      "enabled": true,
      "description": "Execute multiple agents simultaneously",
      "maxConcurrency": 5,
      "agentGroups": {
        "architecture": ["software-architect", "ux-designer"],
        "implementation": ["frontend-engineer", "backend-engineer", "api-engineer"],
        "quality": ["qa-engineer", "security-engineer"],
        "operations": ["deployment-engineer", "devops-architect"]
      },
      "allowedParallelGroups": [
        ["software-architect", "ux-designer"],
        ["frontend-engineer", "backend-engineer", "api-engineer"],
        ["qa-engineer", "security-engineer"]
      ]
    },
    "pipeline": {
      "enabled": true,
      "description": "Sequential execution with dependencies",
      "defaultPipeline": [
        {"stage": "design", "agents": ["software-architect", "ux-designer"], "parallel": true},
        {"stage": "implement", "agents": ["backend-engineer", "frontend-engineer"], "parallel": true},
        {"stage": "test", "agents": ["qa-engineer"], "parallel": false},
        {"stage": "review", "agents": ["reviewer"], "parallel": false},
        {"stage": "deploy", "agents": ["deployment-engineer"], "parallel": false}
      ],
      "checkpointBetweenStages": true,
      "failFast": true
    },
    "hybrid": {
      "enabled": true,
      "description": "Mixed parallel and sequential execution",
      "rules": [
        {
          "condition": "architecture_phase",
          "strategy": "concurrent",
          "agents": ["software-architect", "ux-designer", "data-engineer"]
        },
        {
          "condition": "implementation_phase",
          "strategy": "concurrent",
          "agents": ["frontend-engineer", "backend-engineer", "api-engineer"]
        },
        {
          "condition": "quality_phase",
          "strategy": "pipeline",
          "agents": ["qa-engineer", "security-engineer", "reviewer"]
        }
      ]
    }
  },

  "dependencies": {
    "enabled": true,
    "dependencyGraph": {
      "backend-engineer": {
        "dependsOn": ["software-architect"],
        "provides": ["api", "database", "backend_logic"]
      },
      "frontend-engineer": {
        "dependsOn": ["ux-designer", "api-engineer"],
        "provides": ["ui", "user_experience"]
      },
      "api-engineer": {
        "dependsOn": ["software-architect"],
        "provides": ["api_spec", "endpoints"]
      },
      "qa-engineer": {
        "dependsOn": ["backend-engineer", "frontend-engineer"],
        "provides": ["test_results", "quality_report"]
      },
      "deployment-engineer": {
        "dependsOn": ["qa-engineer", "security-engineer"],
        "provides": ["deployment", "infrastructure"]
      }
    },
    "automaticResolution": true,
    "circularDependencyDetection": true
  },

  "resourceManagement": {
    "cpu": {
      "maxCpuPercent": 80,
      "perAgentLimit": 25,
      "throttleThreshold": 90
    },
    "memory": {
      "maxMemoryMB": 4096,
      "perAgentLimitMB": 1024,
      "warningThresholdPercent": 85
    },
    "api": {
      "maxConcurrentRequests": 10,
      "perAgentLimit": 3,
      "rateLimitPerMinute": 100
    }
  },

  "checkpointIntegration": {
    "enabled": true,
    "autoCheckpointBeforeParallel": true,
    "autoCheckpointAfterParallel": true,
    "perAgentCheckpoints": true,
    "rollbackOnFailure": true,
    "preserveSuccessfulAgents": true
  },

  "costOptimization": {
    "enabled": true,
    "budgetAware": true,
    "modelSelectionPerAgent": true,
    "pauseOnBudgetExceeded": true,
    "priorityBasedExecution": true,
    "costThresholds": {
      "warning": 0.75,
      "critical": 0.90,
      "emergency": 0.95
    }
  },

  "monitoring": {
    "realTimeProgress": true,
    "progressUpdateInterval": 1,
    "detailedLogs": true,
    "performanceMetrics": true,
    "failureNotifications": true,
    "successNotifications": true
  },

  "conflictResolution": {
    "enabled": true,
    "strategy": "interactive",
    "autoMerge": false,
    "fileConflictDetection": true,
    "pauseOnConflict": true
  },

  "qualityGates": {
    "enabled": true,
    "runBetweenStages": true,
    "failOnQualityIssues": false,
    "autoRollbackOnFailure": false
  },

  "outputAggregation": {
    "enabled": true,
    "combineOutputs": true,
    "preserveAgentIdentity": true,
    "format": "structured",
    "includeMetadata": true
  },

  "safetyFeatures": {
    "maxExecutionTime": 3600,
    "healthChecks": true,
    "healthCheckInterval": 30,
    "automaticFailover": true,
    "gracefulShutdown": true,
    "emergencyStop": true
  },

  "notifications": {
    "parallelExecutionStarted": {
      "enabled": true,
      "channels": ["console"],
      "format": "üöÄ Parallel execution started: {agent_count} agents"
    },
    "agentStarted": {
      "enabled": true,
      "channels": ["console"],
      "format": "‚ñ∂Ô∏è Agent started: {agent_type}"
    },
    "agentCompleted": {
      "enabled": true,
      "channels": ["console"],
      "format": "‚úÖ Agent completed: {agent_type} ({duration}s)"
    },
    "agentFailed": {
      "enabled": true,
      "channels": ["console", "desktop"],
      "format": "‚ùå Agent failed: {agent_type} - {error}"
    },
    "parallelExecutionCompleted": {
      "enabled": true,
      "channels": ["console"],
      "format": "üéâ Parallel execution completed: {success_count}/{total_count} successful"
    },
    "conflictDetected": {
      "enabled": true,
      "channels": ["console", "desktop"],
      "format": "‚ö†Ô∏è Conflict detected: {conflict_type}"
    }
  },

  "performance": {
    "asyncExecution": true,
    "lazyLoading": true,
    "caching": true,
    "progressiveExecution": true,
    "earlyTermination": true
  },

  "experimentalFeatures": {
    "aiTaskScheduling": {
      "enabled": false,
      "description": "AI-powered task scheduling optimization",
      "confidence_threshold": 0.85
    },
    "predictiveScaling": {
      "enabled": false,
      "description": "Predict resource needs and scale proactively",
      "accuracy_target": 0.90
    },
    "crossSessionParallel": {
      "enabled": false,
      "description": "Share parallel execution across sessions",
      "team_collaboration": false
    }
  }
}
