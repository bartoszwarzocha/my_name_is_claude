{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "description": "Parallel Agent Execution System - 3x development speed through concurrent workflows",
  "lastUpdated": "2025-10-05",

  "parallelExecution": {
    "enabled": true,
    "maxConcurrentAgents": 3,
    "autoWorkloadDistribution": true,
    "intelligentDependencyResolution": true,
    "realTimeProgressTracking": true,
    "automaticConflictDetection": true
  },

  "agentTeams": {
    "full_stack_team": {
      "name": "Full-Stack Development Team",
      "agents": ["frontend-engineer", "backend-engineer", "qa-engineer", "deployment-engineer"],
      "executionMode": "parallel",
      "dependencies": {
        "frontend-engineer": [],
        "backend-engineer": [],
        "qa-engineer": ["frontend-engineer", "backend-engineer"],
        "deployment-engineer": ["qa-engineer"]
      },
      "estimatedSpeedup": "3x",
      "useCases": ["feature_development", "bug_fixes", "refactoring"]
    },
    "architecture_team": {
      "name": "Architecture & Design Team",
      "agents": ["software-architect", "security-engineer", "performance-engineer"],
      "executionMode": "parallel",
      "dependencies": {
        "software-architect": [],
        "security-engineer": ["software-architect"],
        "performance-engineer": ["software-architect"]
      },
      "estimatedSpeedup": "2.5x",
      "useCases": ["system_design", "technical_decisions", "architecture_review"]
    },
    "compliance_team": {
      "name": "Enterprise Compliance Team",
      "agents": ["compliance-auditor", "security-engineer", "governance-architect"],
      "executionMode": "parallel",
      "dependencies": {
        "compliance-auditor": [],
        "security-engineer": [],
        "governance-architect": ["compliance-auditor"]
      },
      "estimatedSpeedup": "2x",
      "useCases": ["compliance_audit", "security_review", "governance_validation"]
    },
    "operations_team": {
      "name": "Production Operations Team",
      "agents": ["sre-engineer", "monitoring-engineer", "incident-responder", "reliability-engineer"],
      "executionMode": "mixed",
      "dependencies": {
        "sre-engineer": [],
        "monitoring-engineer": [],
        "incident-responder": ["sre-engineer", "monitoring-engineer"],
        "reliability-engineer": []
      },
      "estimatedSpeedup": "2.5x",
      "useCases": ["incident_response", "system_reliability", "operational_excellence"]
    },
    "data_team": {
      "name": "Data Engineering & Analytics Team",
      "agents": ["data-engineer", "data-scientist", "analytics-engineer"],
      "executionMode": "parallel",
      "dependencies": {
        "data-engineer": [],
        "data-scientist": ["data-engineer"],
        "analytics-engineer": ["data-engineer"]
      },
      "estimatedSpeedup": "2x",
      "useCases": ["data_pipeline", "analytics", "ml_development"]
    }
  },

  "workloadDistribution": {
    "strategy": "intelligent",
    "factors": [
      "agent_availability",
      "task_complexity",
      "estimated_duration",
      "resource_requirements",
      "dependency_graph"
    ],
    "balancing": "dynamic",
    "rebalancingOnFailure": true
  },

  "dependencyResolution": {
    "enabled": true,
    "autoDetect": true,
    "validation": "pre_execution",
    "blockingBehavior": "wait_for_dependencies",
    "maxWaitTime": "5m",
    "timeoutAction": "fail_with_notification"
  },

  "progressTracking": {
    "enabled": true,
    "granularity": "per_agent",
    "updateFrequency": "real_time",
    "display": {
      "format": "progress_bar",
      "showEstimatedCompletion": true,
      "showAgentStatus": true,
      "showDependencies": true
    }
  },

  "conflictResolution": {
    "autoDetection": true,
    "types": [
      "file_conflicts",
      "resource_conflicts",
      "state_conflicts",
      "dependency_conflicts"
    ],
    "strategy": {
      "file_conflicts": "merge_with_notification",
      "resource_conflicts": "queue_and_retry",
      "state_conflicts": "checkpoint_and_rollback",
      "dependency_conflicts": "reorder_execution"
    },
    "manualResolutionRequired": true
  },

  "checkpointIntegration": {
    "enabled": true,
    "checkpointBeforeParallelExecution": true,
    "perAgentCheckpoints": true,
    "rollbackOnConflict": false,
    "preserveSuccessfulAgents": true
  },

  "performanceOptimization": {
    "resourceAllocation": "dynamic",
    "cpuLimit": "80%",
    "memoryLimit": "2GB_per_agent",
    "networkOptimization": true,
    "caching": true
  },

  "failureHandling": {
    "onAgentFailure": "continue_others",
    "retryStrategy": {
      "maxRetries": 3,
      "backoffMultiplier": 2,
      "initialDelay": "1s"
    },
    "fallbackToSequential": true,
    "notifyOnFailure": true
  },

  "customTeamTemplates": {
    "allowUserDefined": true,
    "templateLocation": ".claude/config/custom-teams/",
    "validation": "auto",
    "sharing": false
  },

  "scalingRules": {
    "autoscale": true,
    "minAgents": 1,
    "maxAgents": 5,
    "scaleUpTrigger": {
      "queueLength": 5,
      "waitTime": "2m"
    },
    "scaleDownTrigger": {
      "idleTime": "5m",
      "utilization": "< 20%"
    }
  },

  "costOptimization": {
    "enabled": true,
    "modelProfileIntegration": true,
    "parallelCostMultiplier": 1.0,
    "maxParallelCost": "auto",
    "budgetAwareScaling": true
  },

  "uiCommands": {
    "executeParallel": "claude parallel [team_name] [task]",
    "listTeams": "claude parallel teams",
    "createTeam": "claude parallel create-team [name] [agents...]",
    "status": "claude parallel status",
    "cancel": "claude parallel cancel [execution_id]"
  },

  "monitoring": {
    "enabled": true,
    "metrics": [
      "execution_time",
      "speedup_factor",
      "resource_utilization",
      "conflict_rate",
      "success_rate"
    ],
    "dashboardIntegration": true,
    "alerting": true
  }
}
